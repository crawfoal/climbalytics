<% if current_user.current_location %>
  Near you:
  <%= link_to('#', data: { behavior: 'locate-user'}, role: 'button', class: 'btn-default', id: 'refresh-my-location') do %>
    <i class="fa fa-refresh fa-lg"></i>
  <% end %>
  <% gyms_near(current_user).each do |gym| %>
    <%= link_with_inner_div_to gym.name, '#', data: {'gym-id': gym.id}, role: 'button', class: 'gym-link' %>
  <% end %>
<% else %>
<%= link_to 'Find gyms near me', '#', data: { behavior: 'locate-user' }, role: 'button', class: 'btn-default', id: 'find-me'%>
<% end %>
