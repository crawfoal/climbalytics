= form_for :user_account, url: user_account_registration_path do |f|
  = render partial: "shared/error_messages", locals: {target: @user_account}
  %section.signup-fields
    = f.label :email
    = f.email_field( :email, { autofocus: true, placeholder: "Email Address"})
    = f.label :password
    = f.password_field( :password, { autocomplete: "off", placeholder: "Password"})
    = f.label :password_confirmation
    = f.password_field( :password_confirmation, { autocomplete: "off", placeholder: "Confirm Password"})
    = f.submit "Sign up", class: "btn-default"
