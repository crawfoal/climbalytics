<p id="notice"><%= notice %></p>

<h1>Listing Boulders</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Grade</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boulders.each do |boulder| %>
      <tr>
        <td><%= boulder.name %></td>
        <td><%= boulder.grade %></td>
        <td><%= boulder.picture %></td>
        <td><%= link_to 'Show', boulder %></td>
        <td><%= link_to 'Edit', edit_boulder_path(boulder) %></td>
        <td><%= link_to 'Destroy', boulder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

