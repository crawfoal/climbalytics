<%= form_for :user_account, url: user_account_session_path do |f| %>
  <%= render partial: "shared/error_messages", locals: {target: @user_account} %>

  <section class="signin-fields">
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field( :email, { autofocus: true, placeholder:"Email Address" }) %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field( :password, { autocomplete: "off", placeholder: "Password"}) %>
      <span class="help-block"><%= link_to "Forgot your password?", new_user_account_password_path%></span>
    </div>

    <% if Devise.mappings[:user_account].rememberable? %>
    <div class="checkbox">
      <%= f.label(:remember_me) do %>
        <%= f.check_box :remember_me %>
        Remember me
      <% end %>
    </div>
    <% end %>

    <div class="form-group">
      <%= f.submit "Log in", class: "btn" %>
    </div>
  </section>
<% end %>
